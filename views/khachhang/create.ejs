<%- include('../shared/admin/header') -%>

    <body class="sb-nav-fixed">
        <!-- top -->
        <%- include('../shared/admin/top') -%>
            <div id="layoutSidenav">
                <!-- left -->
                <%- include('../shared/admin/left') -%>
                    <!-- content -->
                    <div id="layoutSidenav_content">

                        <form class="m-5" action="/admin/khachhang/create" method="post">
                            <div class="form-group">
                                <label for="KhachHangID">ID</label>
                                <input type="text" name="KhachHangID" required class="form-control" id="KhachHangID" aria-describedby="emailHelp" placeholder="Mã Khách Hàng">
                            </div>
                            <div class="form-group">
                                <label for="HotenKH">Họ Tên Khách Hàng</label>
                                <input type="text" name="HotenKH" class="form-control" id="HotenKH" placeholder="Họ Tên Khách Hàng">
                            </div>
                            <div class="form-group">
                                <label for="NgaySinh">Ngày Sinh</label>
                                <input type="NgaySinh" name="NgaySinh" class="form-control" id="NgaySinh" placeholder="Ngày Sinh">
                            </div>
                            <div class="form-group">
                                <label for="DiachiKH">Địa Chỉ</label>
                                <input type="text" name="DiachiKH" class="form-control" id="DiachiKH" placeholder="Địa Chỉ Khách Hàng">
