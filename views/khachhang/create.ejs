                            <div class="form-group">
                                <label for="EmailKH">Email</label>
                                <input type="text" name="EmailKH" class="form-control" id="EmailKH" placeholder="EmailKH">
                            </div>
                            <div class="form-group">
                                <label for="SdtKH">Số Điện Thoại</label>
                                <input type="text" name="SdtKH" class="form-control" id="SdtKH" placeholder="SdtKH">
                            </div>
                            <button type="submit" class="btn btn-primary mt-3">Thêm</button>
                        </form>
                        <%- include('../shared/admin/footerMini') -%>
                    </div>
            </div>
